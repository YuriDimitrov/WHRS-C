                <f:SimpleForm id="SimpleFormDisplayCharacteristics"
                          editable="false"
                          layout="ResponsiveGridLayout"
                          labelSpanXL="5"
                          labelSpanL="5"
                          labelSpanM="5"
                          labelSpanS="5"
                          adjustLabelSpan="false"
                          emptySpanXL="1"
                          emptySpanL="1"
                          emptySpanM="1"
                          emptySpanS="1"
                          columnsXL="4"
                          columnsL="4"
                          columnsM="4"
                          singleContainerFullSize="false" >
                  <f:content>
                    <Label text="Sweetness" />
                    <Text text="{viewModel>SweetnessRate} / 5" />
                    <Label text="Acidity" />
