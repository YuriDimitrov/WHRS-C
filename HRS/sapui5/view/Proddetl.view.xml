                    <Text text="{viewModel>TanninRate} / 5"/>
                    <Label text="Alcohol" />
                    <Text text="{viewModel>AlcoholRate} / 5"/>
                    <Label text="Body" />
                    <Text text="{viewModel>BodyRate} / 5"/>
